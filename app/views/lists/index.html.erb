<header class="mt-2 d-flex flex-row justify-content-between">
  <h1>Lists</h1>
  <%= link_to "Create new list", new_list_path, class: "btn btn-primary d-flex align-items-center" %>
</header>

<div class="list-container">
    <% @lists.each do |list| %>
      <%= link_to list.name, list_path(list), class: "list-item btn btn-secondary" %>
    <% end %>
</div>
